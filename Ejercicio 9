#include <iostream>

using namespace std;

int main()
{
    int segundos, horas, minutos, residuo;
    cout<<"Ingrese segundos";
    cin>>segundos;
    horas= segundos/3600;
    residuo= segundos%3600;
    minutos= residuo/60;
    residuo= residuo%60;
    
    cout<< "La conversion es: "<<horas << "horas," << minutos << "minutos," <<residuo <<"segundos";
   
    
    
    return 0;
}
